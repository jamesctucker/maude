{
  "manifest_version": 3,
  "name": "Maude",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "sidePanel",
    "contextMenus"
  ],
  "action": {
    "default_title": "Click to open panel"
  },
  "background": {
    "service_worker": "src/background/index.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "128": "images/128.png"
  }
}
